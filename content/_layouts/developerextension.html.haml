:css
  div.container {
    margin-left: 8%;
    margin-right: 8%;
  }
  div.container .row.body {
    margin-right: 1em;
    margin-left: 1em;
    padding-left: 0;
    padding-right: 0;
  }
  .toc {
      float: right;
  }
  div.sidebar-nav > ul {
    list-style: none;
    padding-inline-start: 2em;
  }
  ion-icon {
    color: #bf6900;
  }

= partial('anchors.html.haml');

.container
  .row.body.flex-nowrap
    #sidebar-menu.col-4
      #sidebar-content.sidebar-nav.tour
        %p
          = active_href('doc/developer', '> Developer Documentation Home')

        %h5
          Developer Documentation
        %ul
          %li
            = active_href('doc/developer/tutorial', 'Plugin Tutorial')
          %li
            = active_href('doc/developer/tutorial-improve', 'Improve a Plugin Tutorial')
          %li
            = active_href('doc/developer/guides', 'How-To Guides')
          %li
            = active_href('doc/developer/book', 'Jenkins Developer Reference')
          %li
            = active_href('doc/developer/extensions', 'Extensions Index')

    .col-8
      - unless page.notitle
        %h1
          = page.title

      = content
