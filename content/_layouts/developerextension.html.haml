:css
  .container .row.body {
    margin-right: 5em;
    margin-left: 5em;
  }
  .toc {
      float: right;
  }

:javascript
  $(function () {
    for (var i = 1 ; i <= 6 ; i ++) {
      anchors.add('.container .row.body h' + i);
    }
  })

.container
  .row.body
    .col-12
      - unless page.notitle
        %h1
          = page.title

      = content
