---
layout: default
section: blog
---

:css
  .videoblock iframe {
      aspect-ratio: 16 / 9;
      max-width: 100%;
      height: auto;
  }

= partial('anchors.html.haml', :selector => '.app-post-page')

%article.container.app-post-page
  %div{:class => "app-!-display-flex"}
    %a.app-back-link{:href => expand_link("blog")}
      Back to blog

  %h1
    = page.title

  .post-attrs
    = display_author_for(page)

    - if page.date
      = page.date.strftime('%B %-d, %Y')

    .share-container.share-container--unexpanded
      %button.app-button.app-button--primary
        = File.read("content/images/symbols/share-button-post.svg")
        Share
      .share-buttons
        %a{:href => "https://twitter.com/intent/tweet?text=#{CGI::escape(page.title)}&url=#{CGI::escape("https://www.jenkins.io" + expand_link(page.url))}", :class => "app-button app-button--square app-social-media-button-x", :'data-tooltip' => "𝕏 (formerly Twitter)", 'rel' => 'noreferrer nofollow', 'target' => '_blank'}
          = File.read("content/images/symbols/x.svg")
        %a{:href => "https://www.linkedin.com/sharing/share-offsite/?url=#{CGI::escape("https://www.jenkins.io" + expand_link(page.url))}", :class => "app-button app-button--square app-social-media-button-linkedin", :'data-tooltip' => "LinkedIn", 'rel' => 'noreferrer nofollow', 'target' => '_blank'}
          = File.read("content/images/symbols/linkedin.svg")
        %a{:href => "https://mastodon.social/share?text=#{CGI::escape(page.title + " " + "https://www.jenkins.io" + expand_link(page.url))}", :class => "app-button app-button--square app-social-media-button-mastodon", :'data-tooltip' => "Mastodon", 'rel' => 'noreferrer nofollow', 'target' => '_blank'}
          = File.read("content/images/symbols/mastodon.svg")
        %a{:href => "https://bsky.app/intent/compose?text=#{CGI::escape(page.title + " " + "https://www.jenkins.io" + expand_link(page.url))}", :class => "app-button app-button--square app-social-media-button-bluesky", :'data-tooltip' => "Bluesky", 'rel' => 'noreferrer nofollow', 'target' => '_blank'}
          = File.read("content/images/symbols/bluesky.svg")

  %div.blog-content
    - if page.note
      = asciidoc("NOTE: #{page.note}")
    = content

  - if page.tags
    %ul.app-tags
      - page.tags.each do |tag|
        %li
          %a.app-tags__tag{:href => expand_link("blog/tags/#{tag}")}
            = tag

  - authors = page.authors || [page.author]

  %h2
    = authors.length > 1 ? "About the authors" : "About the author"

  - authors.each do |author|
    = partial("author.html.haml", :author => author)

  = partial('discuss.html.haml', :links => page.links)

:javascript
  document.addEventListener('DOMContentLoaded', function() {
    const shareContainer = document.querySelector('.share-container');
    const toggleButton = shareContainer.querySelector('button');

    toggleButton.addEventListener('click', function(e) {
      e.stopPropagation();
      shareContainer.classList.remove('share-container--unexpanded');
    });

    document.addEventListener('click', function(e) {
      if (!shareContainer.contains(e.target)) {
        shareContainer.classList.add('share-container--unexpanded');
      }
    });
  });
