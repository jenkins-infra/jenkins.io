            = sha256_value
            %span{class: 'sha-256', data: {clipboard_text: sha256_value}}
              %button{class: 'app-button app-button--tertiary copy-button', onclick: 'event.preventDefault();copyToClipboard(event); changeIcon("copy-icon")', data: {clipboard_target: '.sha-256'}, :'data-tooltip' => 'Click to copy'}
                %ion-icon{name:"copy-outline", id: "copy-icon"}

        - lts_releases.each do |item|
          %a.app-button{:href => item[:href]}
            = File.read("content/images/symbols/#{item[:image]}.svg")
            = item[:title]
            - if item[:third_party]
