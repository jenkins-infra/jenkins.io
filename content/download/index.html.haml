.app-download-page__downloads
  .app-download-page__downloads__item
    %p.app-download-page__download-header
      Download Jenkins
      = site.jenkins.stable
      LTS for:

    .app-download-page__download-list
      %a.app-button{:href=>'https://get.jenkins.io/war-stable/' + site.jenkins.stable + '/jenkins.war'}
