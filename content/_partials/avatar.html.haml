- author = page.author
- author.avatar = Dir.glob("content/images/avatars/#{page.authorId}.{bmp,gif,ico,jpg,jpeg,png,svg}").first
- if author.avatar
  - author.avatar.sub!('content','')
  %div.app-avatar{:style => "width: 128px"}
    %img.app-avatar__image{:src => expand_link(author.avatar), :alt => author.name}
- else
  %div.app-avatar{:style => "width: 128px"}
