  .skew
  .container
    .row
      &nbsp;
    .row.justify-content-center

      .col-md-5.col-lg-4.mr-5
        %img{:src => "/images/logos/jenkins/Jenkins-stop-the-war.svg", :style => 'max-width: 385px;'}

      .col-md-5.col-lg-7.text-white
        %h1.page-title
          %span>
            Jenkins
        %p{ :style => 'font-size:20px;'}
          %strong
            Build great things at any scale.
        %p
          The leading open source automation server, Jenkins provides
          hundreds of plugins to support building, deploying and automating
          any project.
        %p
          %img{:src => "https://s.w.org/images/core/emoji/13.1.0/svg/1f1fa-1f1e6.svg", :style => 'width: 40px;'}
