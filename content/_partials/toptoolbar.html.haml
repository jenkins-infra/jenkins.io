    $(document).delegate('*[data-toggle="lightbox"]', 'click', function(event) {
      event.preventDefault();
      $(this).ekkoLightbox();
    });
  })

%div.betanotice
  This site is currently in beta

#ji-hover-layer

%nav#ji-toolbar.navbar.navbar-dark.bg-inverse

  %a#home-logo.fixed.navbar-brand{:href => '/'}
    = site.base_title

  %ul.nav.navbar-nav
    %li.nav-item.fixed
      #download-menu.btn-group
        %a.btn.btn-primary.dropdown-toggle{'data-toggle'=>"dropdown", 'aria-haspopup'=>"true", 'aria-expanded'=>"false"}
          Downloads
        = partial('downloadlist.html.haml')
    %li.nav-item.dropdown
      %a.nav-link.dropdown-toggle{'data-toggle' => 'dropdown',
          :href=> "#", :role=>"button", 'aria-haspopup'=>"true", 'aria-expanded'=>"false"}
        Participate
      %div.dropdown-menu
        %a.dropdown-item{:href => "/content/mailing-lists", :title => "Browse Jenkins mailing list archives and/or subscribe to lists"}
          Mailing Lists
        %a.dropdown-item{:href => "/content/chat", :title => "Chat with the rest of the Jenkins community on IRC"}
          Chat
        %a.dropdown-item{:href => "https://twitter.com/jenkinsci", :title => "Check out @jenkinsci on Twitter"}
          Twitter
        %a.dropdown-item{:href => "/content/event-calendar", :title => "Calendar for Jenkins events"}
          Event Calendar
        %a.dropdown-item{:href => "https://wiki.jenkins-ci.org/display/JENKINS/Office+Hours", :title => "Hangouts-based online meeting"}
          Office Hours
        %a.dropdown-item{:href => "http://jenkins.meetup.com/", :title => "Meetups"}
          Meetups
        %a.dropdown-item{:href => "https://reddit.com/r/jenkinsci", :title => "Latest Jenkins related news on /r/jenkinsci"}
          \/r/jenkinsci
        %a.dropdown-item{:href =>"https://wiki.jenkins-ci.org/display/JENKINS/Google+Summer+Of+Code+2016", :title => "Google Summer of Code 2016"}
          Google Summer of Code 2016
    %li.nav-item.dropdown{:class => ('active' if page.section == 'solutions' )}
      %a.nav-link.dropdown-toggle{'data-toggle' => 'dropdown',
          :href=> "#", :role=>"button", 'aria-haspopup'=>"true", 'aria-expanded'=>"false"}
        Use-cases
      %div.dropdown-menu
        - # Find all our solution pages and then sort by the `usecase` property in their front-matter
        - # This will make the ordering of the submenu nice and consistent for users
        - site.pages.select { |p| p.output_path =~ /solutions/ }.sort_by! { |p| p.usecase }.each do |link|
          %a.dropdown-item.feature{:href => link.url,
            :title => link.title}
            = link.usecase
    %li.nav-item{:class => ('active' if page.section == 'doc' )}
      %a.nav-link{:href => '/doc'}
        Documentation
    %li.nav-item{:class => ('active' if page.section == 'issues' )}
      %a.nav-link{:href => 'https://wiki.jenkins-ci.org/'}
        Wiki
    %li.nav-item{:class => ('active' if page.section == 'issues' )}
      %a.nav-link{:href => 'https://issues.jenkins-ci.org/'}
        Issues
    %li.nav-item{:class => ('active' if page.section == 'press' )}
      %a.nav-link{:href => '/press'}
        Press
    %li.nav-item{:class => ('active' if page.section == 'conduct' )}
      %a.nav-link{:href => '/conduct'}
        Conduct

